<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_orange"
    tools:context=".MapActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/search_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#B3FFFFFF"
        android:elevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:clipToOutline="true">

        <!-- Campo Origen con botón ❌ -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/origin_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Origen"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:background="@drawable/rounded_input"
                android:padding="10dp"
                android:textColor="#000"
                android:inputType="text"
                android:layout_toStartOf="@id/clear_origin" />

            <ImageButton
                android:id="@+id/clear_origin"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Borrar origen"
                android:visibility="gone" />
        </RelativeLayout>

        <!-- Campo Destino con botón ❌ -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/dest_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Destino"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:background="@drawable/rounded_input"
                android:padding="10dp"
                android:textColor="#000"
                android:inputType="text"
                android:layout_toStartOf="@id/clear_dest" />

            <ImageButton
                android:id="@+id/clear_dest"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Borrar destino"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_panel"
        android:layout_marginHorizontal="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/routes_list"
        android:background="#80000000"
        android:gravity="center"
        android:padding="8dp"
        android:text="Toca el mapa para fijar origen y destino"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/routes_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        android:dividerHeight="8dp"
        android:divider="@android:color/transparent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_panel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locate" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />
    </LinearLayout>

</RelativeLayout>
